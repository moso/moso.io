{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "incremental": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowJs": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "types": [
            "vite/client",
            "vite-plugin-pages/client",
            "node"
        ],
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "ScriptHost"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@/icons/*": ["./src/icons/*"],
            "@/pages/*": ["./pages/*"],
            "@/styles/*": ["./src/styles/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
    "exclude": ["dist", "node_modules"]
}
